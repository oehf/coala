<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ehf="http://www.intercomponentware.com/schema/ehf-commons"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.intercomponentware.com/schema/ehf-commons http://www.intercomponentware.com/schema/ehf-commons/ehf-commons.xsd">

        
	<!-- the list of criteria -->
	<util:list id="entityPrincipalFinderCriteriaList">
		<ref bean="entityPrincpalFinderCriteria1"/>
	</util:list>

 	<!-- the criteria (currently test values - no real codesystems) -->
	<bean id="entityPrincpalFinderCriteria1" 
			class="com.icw.ehf.usermgnt.domain.EntityPrincipalFinderCriteria">
		<!-- sourceIdentifierRoot -->	
		<constructor-arg type="java.lang.String" value="personRoot"/>
		<!-- roleCodeKey -->
		<constructor-arg type="java.lang.String" value="employer"/>
		<!-- roleCodeSystemId -->
		<constructor-arg type="java.lang.String" value="testRoleSystemId"/>
		<!-- roleCodeVersion -->
		<constructor-arg type="java.lang.String" value="testRoleVersion"/>
		<!-- transitive -->
		<constructor-arg type="boolean" value="false"/>
		<!-- reverse -->
		<constructor-arg type="boolean" value="false"/>
	</bean>
        
</beans>
