<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns="http://www.intercomponentware.com/schema/ehf-module" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.intercomponentware.com/schema/ehf-module http://www.intercomponentware.com/schema/ehf-module/ehf-module.xsd">  
  <module id="coala-xds"> 
    <configLocations> 
      <value>classpath:/META-INF/coala-xds-custom-context.xml</value>  
    </configLocations>  
    <export> 
      <bean id="xdsGate" interface="de.hhn.mi.coala.xds.XDSGate"/>
      <bean id="pxsDateConverter" interface="de.hhn.mi.coala.util.PXSDateConverter"/>
    </export>  
    <import> 
      <ref-bean alias="platformCamelContext" interface="org.apache.camel.CamelContext"/>
      <ref-bean alias="template" interface="org.apache.camel.ProducerTemplate"/>
      <ref-bean alias="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"/>
    </import>
  </module> 
</beans:beans>